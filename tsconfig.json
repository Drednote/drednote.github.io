{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["src/**/**.ts*"],
  "exclude": ["node_modules"]
}
