{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "paths": {
      "@icons/*": ["src/icons/*"],
      "@modules/*": ["src/modules/*"],
      "@const/*": ["src/const/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@public/*": ["public/*"]
    }
  },
  "exclude": [
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.e2e-test.ts",
    "dist",
    "node_modules",
    "babel.config.js",
    "jest.init.js"
  ]
}
