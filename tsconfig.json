{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "exclude": [
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.e2e-test.ts",
    "dist",
    "node_modules",
    "babel.config.js",
    "jest.init.js"
  ]
}
